<?xml version="1.0" encoding="UTF-8"?>
<resources>

  <declare-styleable name="zxing_view">
    <attr name="zxing_scanner_layout" format="reference"/>
  </declare-styleable>

  <declare-styleable name="zxing_camera_preview">
    <attr name="zxing_framing_rect_width" format="dimension" />
    <attr name="zxing_framing_rect_height" format="dimension" />
    <attr name="zxing_use_texture_view" format="boolean" />
    <attr name="zxing_preview_scaling_strategy" format="enum">
      <enum name="centerCrop" value="1" />
      <enum name="fitCenter" value="2" />
      <enum name="fitXY" value="3" />
    </attr>
  </declare-styleable>

  <declare-styleable name="zxing_finder">
    <attr name="zxing_possible_result_points" format="color"/>
    <attr name="zxing_result_view" format="color"/>
    <attr name="zxing_viewfinder_laser" format="color"/>
    <attr name="zxing_viewfinder_mask" format="color"/>
  </declare-styleable>


  <declare-styleable name="zxing_ScannerFrameView">
    <!-- 扫描框宽占比(相对父容器的宽) -->
    <attr name="zxing_frame_widthRatio" format="float|reference" />
    <!-- 扫描框高占比(相对父容器的高) -->
    <attr name="zxing_frame_heightRatio" format="float|reference" />
    <!-- 扫描框宽高比 -->
    <attr name="zxing_frame_whRatio" format="float|reference" />

    <!-- 边框是否显示 -->
    <attr name="zxing_frameLine_visible" format="boolean|reference" />
    <!-- 边框宽度 -->
    <attr name="zxing_frameLine_width" format="dimension|reference" />
    <!-- 边框颜色 -->
    <attr name="zxing_frameLine_color" format="color|reference" />

    <!-- 边角是否显示 -->
    <attr name="zxing_frameCorner_visible" format="boolean|reference" />
    <!-- 边角长度 -->
    <attr name="zxing_frameCorner_length" format="dimension|reference" />
    <!-- 边角长占比（相对自身宽度） -->
    <attr name="zxing_frameCorner_lengthRatio" format="float|reference" />
    <!-- 边角宽度 -->
    <attr name="zxing_frameCorner_width" format="dimension|reference" />
    <!-- 边角颜色 -->
    <attr name="zxing_frameCorner_color" format="color|reference" />

    <!-- 扫描线是否显示 -->
    <attr name="zxing_scanLine_visible" format="boolean|reference" />
    <!-- 扫描线运动方向 -->
    <attr name="zxing_scanLine_direction">
      <enum name="top" value="1" />
      <enum name="bottom" value="2" />
      <enum name="left" value="3" />
      <enum name="right" value="4" />
    </attr>
    <!-- 扫描线长度padding -->
    <attr name="zxing_scanLine_lengthPadding" format="dimension|reference" />
    <!-- 扫描线长占比（相对扫描框宽/高，依方向而定） -->
    <attr name="zxing_scanLine_lengthRatio" format="float|reference" />
    <!-- 扫描线宽度 -->
    <attr name="zxing_scanLine_width" format="dimension|reference" />
    <!-- 扫描线颜色 -->
    <attr name="zxing_scanLine_color" format="color|reference" />
    <!-- 扫描周期（单位毫秒） -->
    <attr name="zxing_scan_cycle" format="integer|reference" />
  </declare-styleable>

  <declare-styleable name="zxing_MaskRelativeLayout">
    <!-- 扫描框外部颜色 -->
    <attr name="zxing_frame_outsideColor" />
    <!-- 指定扫描框ID -->
    <attr name="zxing_frame_viewid" />
  </declare-styleable>

  <declare-styleable name="zxing_MaskConstraintLayout">
    <!-- 扫描框外部颜色 -->
    <attr name="zxing_frame_outsideColor" />
    <!-- 指定扫描框ID -->
    <attr name="zxing_frame_viewid" />
  </declare-styleable>

  <!-- 扫描框外部颜色 -->
  <attr name="zxing_frame_outsideColor" format="color|reference" />
  <!-- 指定扫描框ID -->
  <attr name="zxing_frame_viewid" format="reference"/>



</resources>
