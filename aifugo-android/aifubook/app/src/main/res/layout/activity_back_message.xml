<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_color_F8F8F8"
    android:orientation="vertical">

    <include layout="@layout/view_titlebar_theme_color" />


    <EditText
        android:id="@+id/mEditText"
        style="@style/TextSize_14_Color_Black_threes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_200dp"
        android:layout_margin="@dimen/space_15dp"
        android:background="@drawable/shape_white_10dp"
        android:gravity="top"
        android:hint="请输入意见"
        android:padding="@dimen/space_5dp" />


    <TextView
        android:id="@+id/submitTextView"
        style="@style/TextSize_14_Color_Black_threes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_45dp"
        android:layout_marginLeft="@dimen/space_30dp"
        android:layout_marginTop="@dimen/space_30dp"
        android:layout_marginRight="@dimen/space_30dp"
        android:background="@drawable/homepage_theme_ra_45"
        android:gravity="center"
        android:text="提交建议"
        android:textColor="@color/white" />

</LinearLayout>