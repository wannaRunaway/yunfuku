<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/view_titlebar_theme_color" />

    <LinearLayout
        style="@style/Linear_H"
        android:layout_height="@dimen/space_50dp"
        android:layout_marginTop="@dimen/space_10dp">

        <TextView
            style="@style/TextSize_12_Color_Black_threes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/space_10dp"
            android:text="支付金额"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/canPayMoney"
            style="@style/TextSize_12_Color_Black_threes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_10dp"
            android:paddingLeft="@dimen/space_10dp"
            android:text="支付金额"
            android:textColor="@color/red" />

    </LinearLayout>

    <TextView
        style="@style/TextSize_12_Color_Black_threes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_10dp"
        android:paddingLeft="@dimen/space_10dp"
        android:text="支付方式"
        android:textColor="@color/gray" />

    <RadioGroup
        android:id="@+id/mRadioGroup"
        style="@style/Linear_V"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/canUseText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45dp"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableLeft="@drawable/picture_checkbox_selector_check"
            android:drawablePadding="@dimen/space_10dp"
            android:gravity="center_vertical"
            android:text="余额支付()" />

        <RadioButton
            android:id="@+id/canUseWeChat"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_45dp"
            android:layout_marginLeft="@dimen/space_10dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableLeft="@drawable/picture_checkbox_selector_check"
            android:drawablePadding="@dimen/space_10dp"
            android:gravity="center_vertical"
            android:text="微信支付" />


    </RadioGroup>


    <TextView
        android:id="@+id/saveAddress"
        style="@style/TextSize_14_Color_Black_threes"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_30dp"
        android:layout_marginTop="@dimen/space_60dp"
        android:layout_marginRight="@dimen/space_30dp"
        android:background="@drawable/homepage_theme_ra_45"
        android:gravity="center"
        android:text="立即支付"
        android:textColor="@color/white" />

</LinearLayout>