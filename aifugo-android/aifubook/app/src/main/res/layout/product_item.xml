<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/space_15dp"
    android:elevation="@dimen/space_15dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/inProductDetails"
        android:elevation="@dimen/space_15dp"
        android:background="@drawable/shape_white_5dp"
        android:layout_width="@dimen/space_160dp"
        style="@style/Linear_V"
        tools:ignore="MissingConstraints">

        <ImageView
            android:paddingRight="@dimen/space_10dp"
            android:paddingLeft="@dimen/space_10dp"
            android:src="@mipmap/bg_home_banner"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_150dp" />

        <TextView
            android:layout_marginTop="@dimen/space_5dp"
            android:paddingRight="@dimen/space_5dp"
            android:paddingLeft="@dimen/space_5dp"
            android:text="啥子書記"
            style="@style/TextSize_14_Color_Black_threes" />

        <LinearLayout
            android:minHeight="@dimen/space_30dp"
            android:paddingRight="@dimen/space_5dp"
            android:paddingLeft="@dimen/space_5dp"
            style="@style/Linear_H">

            <TextView
                android:layout_weight="1"
                android:textColor="#FF3333"
                android:text="￥ 666"
                style="@style/TextSize_14_Color_Black_threes" />

            <TextView
                android:text="销量:666"
                android:textColor="@color/gray1"
                style="@style/TextSize_12_Color_Black_threes" />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>