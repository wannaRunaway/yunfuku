<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_tollbar_rl_top"
        android:layout_marginLeft="@dimen/space_30dp"
        android:layout_marginTop="@dimen/space_30dp"
        android:layout_marginRight="@dimen/space_30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机号"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/space_80dp"
            android:textSize="@dimen/font_size_30sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/et_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_25dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.5dp"
            android:layout_marginTop="@dimen/space_8dp"
            android:layout_marginBottom="@dimen/space_45dp"
            android:background="@color/view_color_CCCCCC" />

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入短信验证码"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/black"
                android:textColorHint="@color/gray1"
                android:textSize="17sp" />

            <View
                android:layout_width="@dimen/space_0.5dp"
                android:layout_height="@dimen/space_12dp"
                android:layout_marginLeft="@dimen/space_8dp"
                android:layout_marginRight="@dimen/space_8dp"
                android:background="@color/gray1" />

            <TextView
                android:id="@+id/tv_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/gray1"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.5dp"
            android:layout_marginTop="@dimen/space_8dp"
            android:layout_marginBottom="@dimen/space_20dp"
            android:background="@color/view_color_CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_10dp"
                android:src="@mipmap/icon_uncheck" />

            <TextView
                android:id="@+id/tv_userAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_001"
                android:textColor="@color/gray1"
                android:textSize="@dimen/font_size_13sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/space_35dp"
            android:layout_marginLeft="@dimen/space_15dp"
            android:layout_marginRight="@dimen/space_15dp"
            android:background="@drawable/shape_bottom_login"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_20sp" />

    </LinearLayout>


</RelativeLayout>