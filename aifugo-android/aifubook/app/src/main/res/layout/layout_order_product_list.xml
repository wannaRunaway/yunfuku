<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="13dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/text_14sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_product"
        android:layout_marginEnd="30dp"
        android:layout_toStartOf="@+id/tv_price"
        android:layout_toEndOf="@+id/iv_product"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="2021秋  状元语文笔记 六年级语文" />


    <TextView
        android:id="@+id/tv_price"
        style="@style/text_14sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_product"
        android:layout_alignParentEnd="true"
        android:text="￥73893" />

    <TextView
        android:id="@+id/tv_product_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_price"
        android:layout_alignEnd="@+id/tv_price"
        android:text="x1"
        android:textColor="@color/black_999999"
        android:textSize="@dimen/font_size_14sp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tv_price"
        android:layout_alignBottom="@+id/iv_product"
        android:text=""
        android:textColor="@color/black_999999"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/eeeeee"
        android:layout_below="@+id/iv_product"
        android:layout_marginTop="12dp"
        />

</RelativeLayout>