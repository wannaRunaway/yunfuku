<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.main.money.BindAliPayActivity">

    <include
        android:id="@+id/header"
        layout="@layout/headview_white" />

    <EditText
        android:id="@+id/ed_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/stroke4_666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:paddingLeft="20dp"
        android:hint="填写真实姓名"
        />

    <EditText
        android:id="@+id/ed_aliaccount"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/stroke4_666666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_name"
        android:paddingLeft="20dp"
        android:hint="填写支付宝账号"
        />

    <TextView
        android:id="@+id/bind"
        style="@style/text_16sp_white"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/redfc4e57_4corner"
        android:gravity="center"
        android:text="立即绑定"
        app:layout_constraintTop_toBottomOf="@+id/ed_aliaccount" />
</androidx.constraintlayout.widget.ConstraintLayout>