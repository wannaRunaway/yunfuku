<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    app:left_bottom_radius="16dp"
    app:right_bottom_radius="@dimen/space_16dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/line_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/space_15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格升序"
            style="@style/text_14sp_black"
            android:id="@+id/textview_up"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="价格降序"
            style="@style/text_14sp_black"
            android:id="@+id/textview_down"
            android:layout_marginTop="@dimen/space_20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_filter_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/line_all_button"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/space_15dp"
        android:paddingRight="@dimen/space_15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科目"
            style="@style/text_14sp_black"
            android:id="@+id/text1"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView_subject"
            android:layout_marginTop="@dimen/space_16dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类"
            style="@style/text_14sp_black"
            android:layout_marginTop="24dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview_type"
            android:layout_marginTop="@dimen/space_16dp"
            android:layout_marginBottom="@dimen/space_30dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/line_filter_button"
        app:layout_constraintBottom_toBottomOf="@+id/parent"
        android:background="#80F9F9F9"
        />

</LinearLayout>