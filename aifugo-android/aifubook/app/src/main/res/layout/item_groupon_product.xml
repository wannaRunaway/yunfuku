<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_top"
        android:layout_marginBottom="@dimen/padding_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/left_margin">

            <com.jiarui.base.fresco.CommonImage
                android:id="@+id/cimage1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:viewAspectRatio="1" />

            <com.jiarui.base.fresco.CommonImage
                android:id="@+id/cimage2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:viewAspectRatio="1" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="乌拉那拉、樱桃小丸子"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_groupon_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/right_margin"
            android:background="@drawable/bg_red_button"
            android:paddingLeft="12dp"
            android:paddingTop="2dp"
            android:paddingRight="12dp"
            android:paddingBottom="2dp"
            android:text="去拼单"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_line_height"
        android:background="@color/line_color2" />


</LinearLayout>