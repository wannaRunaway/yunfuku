<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/space_10dp"
    android:paddingTop="@dimen/space_10dp"
    android:paddingRight="@dimen/space_10dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_75dp">

    <RelativeLayout
        android:layout_marginBottom="@dimen/space_20dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginBottom="@dimen/space_2dp"
            android:textColor="@color/black_three"
            android:textSize="@dimen/font_size_14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_schoolClass"
            android:textColor="@color/gray1"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/font_size_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/space_12dp"
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/gray"
            android:layout_marginBottom="@dimen/space_16dp"
            android:textSize="@dimen/font_size_11sp"
            android:text="注册时间"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_alignParentBottom="true"
            android:textColor="@color/gray1"
            android:textSize="@dimen/font_size_12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/view_color_F8F8F8"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</RelativeLayout>