<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_75dp">

    <RelativeLayout
        android:paddingTop="@dimen/space_10dp"
        android:paddingBottom="@dimen/space_10dp"
        android:paddingLeft="@dimen/space_15dp"
        android:paddingRight="@dimen/space_15dp"
        android:layout_width="match_parent"
        android:layout_height="74.5dp">

        <TextView
            android:id="@+id/tv_title"
            android:textColor="@color/black_three"
            android:textSize="@dimen/font_size_14sp"
            android:text="充值成功"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/font_size_12sp"
            android:textColor="@color/gray1"
            android:text="2020-02-23 13:52:01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_alignParentRight="true"
            android:textColor="@color/view_color_FC5739"
            android:textSize="@dimen/font_size_14sp"
            android:text="+100.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_balance"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/space_3dp"
            android:textColor="@color/gray1"
            android:textSize="@dimen/font_size_12sp"
            android:text="余额：2919.80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <View
        android:background="@color/eeeeee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_0.5dp"/>

</LinearLayout>