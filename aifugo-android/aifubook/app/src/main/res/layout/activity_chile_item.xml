<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


   <LinearLayout
       android:layout_marginTop="@dimen/space_10dp"
       android:background="@color/white"
       android:gravity="top"
       style="@style/Linear_V"
       android:layout_height="@dimen/space_100dp">

       <TextView
           android:paddingLeft="@dimen/space_15dp"
           android:gravity="center_vertical"
           android:layout_height="@dimen/space_30dp"
           android:id="@+id/Name"
           style="@style/TextSize_14_Color_Black_threes" />

       <TextView
           android:paddingLeft="@dimen/space_15dp"
           android:gravity="center_vertical"
           android:layout_height="@dimen/space_30dp"
           android:id="@+id/address"
           android:textColor="@color/gray1"
           style="@style/TextSize_12_Color_Black_threes" />

       <View
           android:layout_marginRight="@dimen/space_15dp"
           android:layout_marginLeft="@dimen/space_15dp"
           android:background="@color/view_color_F8F8F8"
           android:layout_width="match_parent"
           android:layout_height="@dimen/space_0.5dp" />

        <LinearLayout
            android:layout_weight="1"
            style="@style/Linear_H">

            <View
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/upDate"
                android:layout_marginRight="@dimen/space_15dp"
                android:drawablePadding="@dimen/space_10dp"
                android:drawableLeft="@mipmap/ziyuan"
                android:text="编辑"
                style="@style/TextSize_12_Color_Black_threes"
                android:textSize="@dimen/font_size_13sp"/>

            <TextView
                android:id="@+id/detele"
                style="@style/TextSize_12_Color_Black_threes"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/space_15dp"
                android:drawableLeft="@mipmap/shanchu"
                android:drawablePadding="@dimen/space_10dp"
                android:text="删除"
                android:textSize="@dimen/font_size_13sp" />

        </LinearLayout>

   </LinearLayout>


</LinearLayout>