<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.tencent.tencentmap.mapsdk.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/inThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20dp"
            android:layout_marginTop="@dimen/space_20dp"
            android:text=""
            android:textColor="@color/black_threes"
            android:textSize="@dimen/font_size_14sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/space_40dp"
            android:layout_below="@+id/inThree"
            android:layout_marginLeft="@dimen/space_20dp"
            android:layout_marginTop="@dimen/space_20dp"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black_threes"
            android:textSize="@dimen/font_size_12sp" />

        <ImageView
            android:id="@+id/showLogo"
            android:layout_width="@dimen/space_40dp"
            android:layout_height="@dimen/space_40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_20dp"
            android:src="@mipmap/togo" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/showLocation"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/white"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="腾讯地图"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/baidu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="百度地图"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/good"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="高德地图"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_45dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="取消"
                android:textSize="@dimen/font_size_14sp" />

        </LinearLayout>

    </RelativeLayout>

    <!--    <include-->
    <!--        layout="@layout/view_titlebar_theme_color" />-->
    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerInside"
        android:src="@drawable/iv_back_trans" />


</RelativeLayout>