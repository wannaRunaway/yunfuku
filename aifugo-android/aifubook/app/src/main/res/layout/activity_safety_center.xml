<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/view_titlebar_theme_color" />

    <LinearLayout
        android:elevation="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginRight="@dimen/right_margin"
        android:background="@drawable/bg_logout"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_logout"
            style="@style/TextSize_14_Color_Black_threes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50dp"
            android:layout_marginTop="@dimen/space_1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
            android:paddingLeft="@dimen/space_10dp"
            android:text="注销账号" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.5dp"
            android:background="@color/gray6" />

        <TextView
            android:id="@+id/USerManger"
            style="@style/TextSize_14_Color_Black_threes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50dp"
            android:layout_marginTop="@dimen/space_1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
            android:paddingLeft="@dimen/space_10dp"
            android:text="用户协议" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_0.5dp"
            android:background="@color/gray6" />

        <TextView
            android:id="@+id/prisitionManger"
            style="@style/TextSize_14_Color_Black_threes"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50dp"
            android:layout_marginTop="@dimen/space_1dp"
            android:background="@color/white"
            android:drawableRight="@mipmap/ic_chevron_right_black_24dp"
            android:paddingLeft="@dimen/space_10dp"
            android:text="隐私条款" />
    </LinearLayout>


</LinearLayout>