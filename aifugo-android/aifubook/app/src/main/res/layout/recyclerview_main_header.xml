<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        />

    <!--                <androidx.recyclerview.widget.RecyclerView-->
    <!--                    android:id="@+id/recyclerView_subject_item"-->
    <!--                    android:layout_width="match_parent"-->
    <!--                    android:layout_height="70dp"-->
    <!--                    android:layout_marginTop="@dimen/space_15dp"-->
    <!--                    android:orientation="horizontal"-->
    <!--                    app:layout_constraintTop_toBottomOf="@+id/banner"-->
    <!--                    android:visibility="gone"-->
    <!--                    />-->

    <ImageView
        android:id="@+id/imageview_groupbuy"
        android:layout_width="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/space_15dp"
        android:src="@mipmap/imageview_groupbug" />

    <LinearLayout
        android:id="@+id/linearlayout_item_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="@dimen/space_15dp"
        >

        <LinearLayout
            android:id="@+id/line_new"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@mipmap/main_yellow"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingTop="20dp">

            <TextView
                style="@style/text_14sp_white_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新书上架" />

            <TextView
                style="@style/text_12sp_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="最新教材先人一步" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_rank"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="75dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@mipmap/main_blue"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingTop="20dp">

            <TextView
                style="@style/text_14sp_white_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="销量榜" />

            <TextView
                style="@style/text_12sp_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="同学们都在用" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_discount"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/space_5dp"
            android:layout_weight="1"
            android:background="@mipmap/main_purple"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:paddingTop="20dp">

            <TextView
                style="@style/text_14sp_white_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="特价图书" />

            <TextView
                style="@style/text_12sp_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="优惠促销" />
        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>