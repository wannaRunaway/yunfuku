<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEEBE3"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="扫码注册，买书\n可以到我这里自提，更加方便"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/join_us" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="加入我们"
            android:textColor="@color/red"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.jiarui.base.fresco.CommonImage
                    android:id="@+id/image1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    fresco:viewAspectRatio="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="还没有下载APP\n扫这里下载"
                    android:textColor="@color/black_three"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.jiarui.base.fresco.CommonImage
                    android:id="@+id/image2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    fresco:viewAspectRatio="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="已经下载APP\n扫这里绑定"
                    android:textColor="@color/black_three"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.jiarui.base.fresco.CommonImage
                    android:id="@+id/image3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    fresco:viewAspectRatio="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="长按识别小程\n序二维码"
                    android:textColor="@color/black_three"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:text="买教辅就上云辅库"
            android:textColor="@color/black_threes"
            android:textSize="14sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_white_top_10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_10dp"
            android:text="分享到"
            android:textColor="@color/gray1"
            android:textSize="@dimen/font_size_14sp" />

        <LinearLayout
            style="@style/Linear_H"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/showSharWechar"
                style="@style/TextSize_14_Color_Black_threes"
                android:layout_marginLeft="@dimen/space_20dp"
                android:drawableTop="@mipmap/wechat_shar"
                android:drawablePadding="@dimen/space_10dp"
                android:gravity="center"
                android:text="微信好友" />

            <TextView
                android:id="@+id/showSharSave"
                style="@style/TextSize_14_Color_Black_threes"
                android:layout_marginLeft="@dimen/space_50dp"
                android:drawableTop="@mipmap/wechat_save"
                android:drawablePadding="@dimen/space_10dp"
                android:gravity="center"
                android:text="保存图片" />

        </LinearLayout>

        <TextView
            android:id="@+id/showSharCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/view_color_F8F8F8"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/black_threes" />

    </LinearLayout>


</LinearLayout>