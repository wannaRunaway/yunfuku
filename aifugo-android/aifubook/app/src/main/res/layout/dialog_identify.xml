<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_grade_16_white"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:paddingBottom="@dimen/space_60dp">

    <TextView
        android:id="@+id/textview_title"
        style="@style/text_18sp_bold_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_16dp"
        android:text="设置身份"
        app:layout_constraintEnd_toEndOf="@+id/parent"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toTopOf="@+id/parent" />

    <TextView
        android:id="@+id/textview_close_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textview_title"
        app:layout_constraintEnd_toEndOf="@+id/parent"
        android:text="X"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/textview_teacher"
        style="@style/text_16sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="教师"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_title"
        app:layout_constraintEnd_toEndOf="@+id/parent"
        />

    <TextView
        android:id="@+id/textview_student"
        style="@style/text_16sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="家长"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_teacher"
        app:layout_constraintEnd_toEndOf="@+id/parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>