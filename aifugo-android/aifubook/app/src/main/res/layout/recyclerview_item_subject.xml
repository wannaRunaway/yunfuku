<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:id="@+id/parent"
    >

    <ImageView
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:id="@+id/imageview_subject_item_icon"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_below="@+id/imageview_subject_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textview_subject_name"
        style="@style/text_14sp_black"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="@dimen/space_15dp"
        android:text="'同步练习"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_6dp"
        />
</RelativeLayout>