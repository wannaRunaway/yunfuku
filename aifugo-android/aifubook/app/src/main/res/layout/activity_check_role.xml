<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.CheckRoleActivity"
    android:paddingLeft="@dimen/space_15dp"
    android:paddingRight="@dimen/space_15dp"
    android:id="@+id/parent"
    >

    <TextView
        android:id="@+id/textview_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:text="请选择您的年级"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/text_24sp_bold_black"
        />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="以便于我们为您提供最佳服务"
        app:layout_constraintStart_toStartOf="@+id/parent"
        style="@style/text_16sp_black"
        app:layout_constraintTop_toBottomOf="@+id/textview_class" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="43dp"
        android:text="家长/老师模式"
        style="@style/text_15sp_black"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/textview2" />

    <LinearLayout
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">
        <TextView
            android:id="@+id/textview_parent"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog_red"
            android:textColor="@color/red_F64A33"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="家长"
            />

        <TextView
            android:id="@+id/textview_teacher"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12dp"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="教师" />

        <TextView
            android:id="@+id/textview_null"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:visibility="invisible"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_name1"
        style="@style/text_16sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="小学"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/line_top" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_name1">

        <TextView
            android:id="@+id/textview_grade1"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog_red"
            android:textColor="@color/red_F64A33"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="一年级" />

        <TextView
            android:id="@+id/textview_grade2"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12dp"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="二年级" />

        <TextView
            android:id="@+id/textview_grade3"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="三年级" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        app:layout_constraintTop_toBottomOf="@+id/line1">

        <TextView
            android:id="@+id/textview_grade4"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="四年级" />

        <TextView
            android:id="@+id/textview_grade5"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12dp"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="五年级" />

        <TextView
            android:id="@+id/textview_grade6"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="六年级" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_name2"
        style="@style/text_16sp_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="初中"
        app:layout_constraintStart_toStartOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/line2" />

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textview_name2">

        <TextView
            android:id="@+id/textview_grade7"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="七年级" />

        <TextView
            android:id="@+id/textview_grade8"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12dp"
            android:layout_marginRight="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="八年级" />

        <TextView
            android:id="@+id/textview_grade9"
            style="@style/text_16sp_black"
            android:layout_width="@dimen/space_0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_12dp"
            android:layout_weight="1"
            android:background="@drawable/grade_dialog"
            android:gravity="center"
            android:paddingTop="@dimen/space_11dp"
            android:paddingBottom="@dimen/space_11dp"
            android:text="九年级" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="@+id/parent"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:text="确定"
        style="@style/text_16sp_white_bold"
        android:background="@drawable/red_22dp"
        android:gravity="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>