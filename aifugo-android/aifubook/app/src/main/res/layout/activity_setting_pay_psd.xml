<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/view_color_F8F8F8"
    android:layout_height="match_parent">

    <include layout="@layout/view_titlebar_theme_color" />

    <TextView
        android:layout_marginTop="@dimen/space_30dp"
        android:layout_marginLeft="@dimen/space_30dp"
        style="@style/TextSize_14_Color_Black_threes"
        android:text="原密码"/>

    <com.aifubook.book.utils.PasswordUnderLineEditText
        android:id="@+id/oldPsd"
        android:layout_marginTop="@dimen/space_10dp"
        android:layout_marginRight="@dimen/space_30dp"
        android:layout_marginLeft="@dimen/space_30dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp" />

    <TextView
        android:layout_marginTop="@dimen/space_30dp"
        android:layout_marginLeft="@dimen/space_30dp"
        style="@style/TextSize_14_Color_Black_threes"
        android:text="新密码"/>

    <com.aifubook.book.utils.PasswordUnderLineEditText
        android:id="@+id/oldNewPsd"
        android:layout_marginTop="@dimen/space_10dp"
        android:layout_marginRight="@dimen/space_30dp"
        android:layout_marginLeft="@dimen/space_30dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50dp" />

    <TextView
        android:id="@+id/truePsd"
        android:text="确定"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/space_50dp"
        android:layout_marginRight="@dimen/space_30dp"
        android:layout_marginLeft="@dimen/space_30dp"
        android:layout_height="@dimen/space_45dp"
        android:layout_width="match_parent"
        android:background="@drawable/homepage_theme_ra_45"
        style="@style/TextSize_14_Color_Black_threes" />

</LinearLayout>