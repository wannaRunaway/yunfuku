<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/onSelect"
        android:orientation="vertical"
        android:layout_marginRight="@dimen/space_20dp"
        android:layout_marginLeft="@dimen/space_10dp"
        android:layout_marginTop="@dimen/space_25dp"
        android:elevation="@dimen/space_8dp"
        android:background="@drawable/shape_white_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/secName"
            android:textSize="@dimen/font_size_14sp"
            android:textColor="@color/black"
            android:paddingLeft="@dimen/space_15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50dp" />

        <View
            android:layout_marginLeft="@dimen/space_25dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_1dp"
            android:background="@color/view_color_F8F8F8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginBottom="@dimen/space_20dp"
                android:id="@+id/right_down_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>